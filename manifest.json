{
  "manifest_version": 2,
  "name": "Spongy",
  "author": "Diego Hernandez",
  "version": "0.0.2",

  "description": "Google Chrome color picker for brand colors and grades",

  "browser_action": {
    "default_icon": {
      "16": "dist/imgs/icon_16.png",
      "24": "dist/imgs/icon_24.png",
      "32": "dist/imgs/icon_32.png"
    },
    "default_title": "Spongy: Check for brand colors",
    "default_popup": "dist/html/popup.html"
  },
  "permissions": ["activeTab"],

  "background": {
    "scripts" : ["dist/scripts/background.js"],
    "persistent": false
  },

  "icons": {
    "16": "dist/imgs/icon_16.png",
    "48": "dist/imgs/icon_48.png",
    "128": "dist/imgs/icon_128.png"
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["dist/scripts/main.js"],
    "css": ["dist/styles/main.css"]
  }]

}
