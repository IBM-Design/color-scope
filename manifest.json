{
  "manifest_version": 2,
  "name": "Spongy",
  "author": "Diego Hernandez",
  "version": "0.0.2",

  "description": "Google Chrome color picker for brand colors and grades",

  "browser_action": {
    "default_icon": {
      "16": "dist/imgs/16x16.gif"
    },
    "default_title": "Check for brand colors",
    "default_popup": "dist/html/popup.html"
  },
  "permissions": ["activeTab"],

  "background": {
    "scripts" : ["dist/scripts/background.js"],
    "persistent": false
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["dist/scripts/main.js"],
    "css": ["dist/styles/main.css"]
  }]

}
